// Prisma Schema - Order Service
// Database: cropfresh_order
// Purpose: Order management, matching

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Order Model - Extended for Story 3.6 Status Tracking
model Order {
  id          Int         @id @default(autoincrement())
  orderNumber String      @unique @map("order_number") @db.VarChar(50)
  farmerId    Int         @map("farmer_id")
  buyerId     Int         @map("buyer_id")
  status      OrderStatus @default(PENDING) // Legacy status
  totalAmount Decimal     @map("total_amount") @db.Decimal(10, 2)
  createdAt   DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime    @updatedAt @map("updated_at") @db.Timestamptz(6)
  deletedAt   DateTime?   @map("deleted_at") @db.Timestamptz(6)

  // Story 3.6 - Tracking Status Fields
  trackingStatus TrackingStatus @default(LISTED) @map("tracking_status")
  statusHistory  Json           @default("[]") @map("status_history") // JSONB timeline

  // Listing info (denormalized)
  listingId  String?  @map("listing_id") @db.VarChar(50)
  cropType   String?  @map("crop_type") @db.VarChar(100)
  cropEmoji  String?  @map("crop_emoji") @db.VarChar(10)
  quantityKg Decimal? @map("quantity_kg") @db.Decimal(10, 2)
  photoUrl   String?  @map("photo_url") @db.VarChar(500)

  // Buyer info (denormalized)
  buyerBusinessType String? @map("buyer_business_type") @db.VarChar(50)
  buyerCity         String? @map("buyer_city") @db.VarChar(100)
  buyerArea         String? @map("buyer_area") @db.VarChar(100)

  // Hauler info (for IN_TRANSIT)
  haulerId      String? @map("hauler_id") @db.VarChar(50)
  haulerName    String? @map("hauler_name") @db.VarChar(100)
  haulerPhone   String? @map("hauler_phone") @db.VarChar(20)
  haulerVehicle String? @map("hauler_vehicle") @db.VarChar(100)

  // ETA and delay
  eta          DateTime? @db.Timestamptz(6)
  delayMinutes Int?      @map("delay_minutes")
  delayReason  String?   @map("delay_reason") @db.VarChar(200)

  // Payment info (for PAID)
  upiTransactionId String? @map("upi_transaction_id") @db.VarChar(100)

  // Story 3.7 - Transaction & Payment Details (AC4, AC5)
  paidAt           DateTime? @map("paid_at") @db.Timestamptz(6)
  qualityGrade     String?   @map("quality_grade") @db.VarChar(10)
  baseAmount       Decimal?  @map("base_amount") @db.Decimal(10, 2)
  qualityBonus     Decimal?  @map("quality_bonus") @db.Decimal(10, 2)
  dropPointName    String?   @map("drop_point_name") @db.VarChar(100)
  dropPointAddress String?   @map("drop_point_address") @db.VarChar(200)

  items OrderItem[]

  @@index([farmerId])
  @@index([trackingStatus])
  @@index([createdAt(sort: Desc)])
  @@map("orders")
}

// OrderItem Model
model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int     @map("order_id")
  cropName  String  @map("crop_name") @db.VarChar(100)
  quantity  Decimal @db.Decimal(10, 2)
  unitPrice Decimal @map("unit_price") @db.Decimal(10, 2)

  order Order @relation(fields: [orderId], references: [id])

  @@map("order_items")
}

// Legacy OrderStatus (backward compatibility)
enum OrderStatus {
  PENDING
  CONFIRMED
  IN_TRANSIT
  DELIVERED
  CANCELLED
}

// Story 3.6 - 7-Stage Tracking Status
enum TrackingStatus {
  LISTED
  MATCHED
  PICKUP_SCHEDULED
  AT_DROP_POINT
  IN_TRANSIT
  DELIVERED
  PAID
}

// Match Model - Story 3.5
model Match {
  id              String      @id @default(uuid()) @db.Uuid
  listingId       String      @map("listing_id") @db.VarChar(50)
  farmerId        Int         @map("farmer_id")
  orderId         String?     @map("order_id") @db.VarChar(50)
  quantityMatched Decimal     @map("quantity_matched") @db.Decimal(10, 2)
  pricePerKg      Decimal     @map("price_per_kg") @db.Decimal(10, 2)
  totalAmount     Decimal     @map("total_amount") @db.Decimal(10, 2)
  status          MatchStatus @default(PENDING_ACCEPTANCE)
  rejectionReason String?     @map("rejection_reason") @db.VarChar(100)
  expiresAt       DateTime    @map("expires_at") @db.Timestamptz(6)
  acceptedAt      DateTime?   @map("accepted_at") @db.Timestamptz(6)
  rejectedAt      DateTime?   @map("rejected_at") @db.Timestamptz(6)
  createdAt       DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime    @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Buyer info (denormalized for performance)
  buyerId           String  @map("buyer_id") @db.VarChar(50)
  buyerBusinessType String  @map("buyer_business_type") @db.VarChar(50)
  buyerCity         String  @map("buyer_city") @db.VarChar(100)
  buyerArea         String? @map("buyer_area") @db.VarChar(100)
  deliveryDate      String? @map("delivery_date") @db.VarChar(50)

  @@index([listingId])
  @@index([farmerId])
  @@index([status])
  @@index([expiresAt])
  @@map("matches")
}

enum MatchStatus {
  PENDING_ACCEPTANCE
  ACCEPTED
  REJECTED
  EXPIRED
}

// Story 3.10 - Quality Ratings
model QualityRating {
  id            String         @id @default(uuid()) @db.Uuid
  orderId       Int            @map("order_id")
  farmerId      Int            @map("farmer_id")
  buyerId       Int            @map("buyer_id")
  rating        Int // 1-5 stars
  comment       String?        @db.Text
  qualityIssues QualityIssue[] @map("quality_issues")
  cropType      String         @map("crop_type") @db.VarChar(100)
  quantityKg    Decimal        @map("quantity_kg") @db.Decimal(10, 2)
  ratedAt       DateTime       @default(now()) @map("rated_at") @db.Timestamptz(6)
  seenByFarmer  Boolean        @default(false) @map("seen_by_farmer")
  seenAt        DateTime?      @map("seen_at") @db.Timestamptz(6)

  // Photo URLs for comparison (optional)
  aiGradedPhotoUrl String? @map("ai_graded_photo_url") @db.VarChar(500)
  buyerPhotoUrl    String? @map("buyer_photo_url") @db.VarChar(500)

  @@index([farmerId])
  @@index([orderId])
  @@index([ratedAt(sort: Desc)])
  @@index([seenByFarmer])
  @@map("quality_ratings")
}

enum QualityIssue {
  BRUISING
  SIZE_INCONSISTENCY
  RIPENESS_ISSUES
  FRESHNESS_CONCERNS
  PACKAGING_PROBLEMS
}
